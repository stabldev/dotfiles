// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "git_panel": {
    "dock": "left"
  },
  "project_panel": {
    "dock": "left",
    "indent_guides": {
      "show": "never"
    }
  },
  "disable_ai": true,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": true,
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Base16 Circus"
  },
  "indent_guides": {
    "enabled": false
  },
  "title_bar": {
    "show_sign_in": false
  },
  "tab_size": 2,
  "language_servers": ["!eslint", "!typescript-language-server", "..."],
  "languages": {
    "Python": {
      "tab_size": 4
    }
  },
  "experimental.theme_overrides": {
    "title_bar.inactive_background": "#191919",
    "scrollbar.thumb.background": "#30303090",
    "scrollbar.thumb.hover_background": "#30303090",
    "scrollbar.thumb.border": null,
    "tab.inactive_background": "#191919",
    "tab.active_background": "#191919",
    "ghost_element.active": "#303030"
  },
  "scrollbar": {
    "axes": {
      "horizontal": false
    }
  },
  "lsp_document_colors": "none"
}
