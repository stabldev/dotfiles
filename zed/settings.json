// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "git": {
    "branch_picker": {
      "show_author_name": true
    },
    "blame": {
      "show_avatar": true
    }
  },
  "preview_tabs": {
    "enable_preview_from_file_finder": false
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "tab_bar": {
    "show": true
  },
  "git_panel": {
    "dock": "left"
  },
  "project_panel": {
    "scrollbar": {
      "show": "never"
    },
    "indent_size": 18.0,
    "entry_spacing": "comfortable",
    "hide_gitignore": false,
    "dock": "left",
    "indent_guides": {
      "show": "never"
    }
  },
  // "disable_ai": true,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": true,
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "VSCode Dark Modern"
  },
  "indent_guides": {
    "enabled": false
  },
  "title_bar": {
    "show_user_picture": true,
    "show_onboarding_banner": true,
    "show_project_items": true,
    "show_branch_name": true,
    "show_menus": false,
    "show_branch_icon": false,
    "show_sign_in": false
  },
  "tab_size": 2,
  "language_servers": ["!eslint", "!typescript-language-server", "..."],
  "languages": {
    "Python": {
      "tab_size": 4,
      "language_servers": ["!ty", "basedpyright", "..."]
    }
  },
  "experimental.theme_overrides": {
    "title_bar.inactive_background": "#181818",
    "scrollbar.track.border": "#00000000",
    "version_control.added": "#648FFF",
    "version_control.deleted": "#FFB000"
  },
  "scrollbar": {
    "axes": {
      "horizontal": false
    }
  },
  "lsp_document_colors": "none",
  "code_actions_on_format": {
    "source.fixAll.biome": true,
    "source.organizeImports.biome": true,
    "source.removeUnusedImports.ts": true
  }
  // "agent_servers": {
  //   "gemini": {
  //     "args": ["-m", "gemini-2.5-flash"]
  //   }
  // }
}
