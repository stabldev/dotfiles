// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent": {
    "default_profile": "write",
    "default_model": {
      "provider": "google",
      "model": "gemini-2.5-flash"
    }
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "project_panel": {
    "scrollbar": {
      "show": "never"
    },
    "indent_size": 18.0,
    "entry_spacing": "comfortable",
    "indent_guides": {
      "show": "never"
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": true,
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "theme": "One Dark - Darkened",
  "indent_guides": {
    "enabled": false
  },
  "title_bar": {
    "show_branch_icon": true,
    "show_sign_in": false
  },
  "tab_size": 2,
  "lsp_document_colors": "none",
  "language_servers": ["!eslint", "!typescript-language-server", "..."],
  "languages": {
    "Python": {
      "tab_size": 4,
      "language_servers": ["ruff", "..."],
      "formatter": {
        "language_server": {
          "name": "ruff"
        }
      }
    }
  },
  "code_actions_on_format": {
    "source.fixAll.biome": true
    // "source.organizeImports.biome": true
  },
  "experimental.theme_overrides": {
    // "title_bar.inactive_background": "#181818",
    // "scrollbar.thumb.background": "#79797925",
    // "scrollbar.thumb.hover_background": "#79797925",
    // "scrollbar.thumb.active_background": "#79797950",
    "scrollbar.track.border": "#00000000",
    "version_control.added": "#648FFF"
    // "version_control.deleted": "#FFB000"
  },
  "scrollbar": {
    "axes": {
      "horizontal": false
    }
  },
  "terminal": {
    "toolbar": {
      "breadcrumbs": false
    }
  }
}
